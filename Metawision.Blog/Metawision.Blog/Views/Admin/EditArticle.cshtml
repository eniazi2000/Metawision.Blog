@using Metawision.Blog.Models;
@using Metawision.Blog.Models.DTO;

@{
    ViewBag.Title = "EditArticle";
    Layout = "~/Views/Admin/_adminLayout.cshtml";
}

@{
    var id = Convert.ToInt32(ViewContext.RouteData.Values["id"].ToString());
    var dArt = articleManager.getArticle(id);
    Html.RenderPartial("EdtArticlePartial", dArt.convertToArticle());
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>

    $("document").ready(function () {
        $("#myForm").trigger("reset");
    });

</script>

