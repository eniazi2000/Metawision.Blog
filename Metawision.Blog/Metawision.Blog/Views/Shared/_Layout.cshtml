<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link rel="icon" href="~/Metawision.ico" />
    @Scripts.Render("~/bundles/jquery")

    @*< rel="icon" href="@Url.Content("~/Content/img/Metavision.png")/>*@

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <img alt="متاویژن" style="vertical-align: middle; margin: 10px auto;" height="30"
                         src="@Url.Content("~/Content/img/Metavision.png")" title="متاویژن" />
                    @*@Html.ActionLink("متاویژن", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("خانه", "Index", "Home")</li>
                        <li>@Html.ActionLink("درباره", "About", "Home")</li>
                        <li>@Html.ActionLink("ارتباط با ما", "Contact", "Home")</li>
                    </ul>
                </div>
            </div>
        </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("خانه", "Index", "Home")</li>
                <li>@Html.ActionLink("درباره", "About", "Home")</li>
                <li>@Html.ActionLink("ارتباط با ما", "Contact", "Home")</li>
            </ul>
            <p>&copy; @DateTime.Now.Year - Metawision</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>

</html>
